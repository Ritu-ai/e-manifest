{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"description": "Schema for the response by the get-bill service",
	"$ref": "#/definitions/Bill",
	"definitions": {
		"Bill": {
			"type": "object",
			"properties": {
				"billStatus": {
					"description": " Contains bill status ",
					"type": "string",
					"enum": [
						"Unpaid",
						"InProgress",
						"ReadyForPayment",
						"Paid",
						"SentToCollections"
					]
				},
				"paymentType": {
					"description": " Contains bill status ",
					"type": "string",
					"enum": [
						"Credit",
						"Ach",
						"OutOfBand"
					]
				},
				"billingAccount": {
					"description": "Contains billing account.",
					"type": "string"
				},
				"billId": {
					"description": "Contains bill id.",
					"type": "string"
				},
				"totalAmount": {
					"description": "Contains bill total amount. ",
					"type": "number"
				},
				"currentAmount": {
					"description": "Contains bill current amount. ",
					"type": "number"
				},
				"previousAmount": {
					"description": "Contains previous months total current amounts. ",
					"type": "number"
				},
				"previousInterestAmount": {
					"description": "Contains previous months total interest amounts. ",
					"type": "number"
				},
				"previousPenaltyAmount": {
					"description": "Contains previous months total penalty amounts. ",
					"type": "number"
				},
				"previousLateFeeAmount": {
					"description": "Contains previous months total Late Fee amounts. ",
					"type": "number"
				},
				"dueDate": {
					"description": "Contains due date. ",
					"type": "string",
					"format": "date-time"
				},
				"createdDate": {
					"description": "Contains the creation date of the bill",
					"type": "string",
					"format": "date-time"
				},
				"updatedDate": {
					"description": "Contains the update date of the bill.",
					"type": "string",
					"format": "date-time"
				},
				"billItems":{
					"description": "contains list of bill items",
					"type": "array",
					"items": {
						"$ref": "#/definitions/BillItem"
					}					
				},
				"lateFees":{
					"description": "contains list of late fees",
					"type": "array",
					"items": {
						"$ref": "#/definitions/LateFee"
					}					
				},
				"revisions":{
					"description": "contains list of revisions",
					"type": "array",
					"items": {
						"$ref": "#/definitions/Revision"
					}					
				}				
			},
			"additionalProperties": false
		},
		"LateFee": {
			"type": "object",
			"properties": {
				"billId": {
					"description": "Contains bill id.",
					"type": "string"
				},
				"currentAmount": {
					"description": "Contains bill current amount. ",
					"type": "number"
				},
				"interestAmount": {
					"description": "Contains calculated interest amount. ",
					"type": "number"
				},
				"penaltyAmount": {
					"description": "Contains calculated penalty amount. ",
					"type": "number"
				},
				"lateFeeAmount": {
					"description": "Contains calculated late fee amount.",
					"type": "number"
				},
				"createdDate": {
					"description": "Contains the creation date of the bill",
					"type": "string",
					"format": "date-time"
				}
			},
	    	"additionalProperties": false
		},
		"BillItem": {
			"type": "object",
			"properties": {
				"manifestTrackingNumber": {
					"description": "Contains manifest tracking number of the bill item.",
					"type": "string"
				},
				"amount": {
					"description": "Contains an amount charged for the manifest ",
					"type": "number"
				},
				"submissionType": {
					"description": "manifest submission type",
					"type": "string",
					"enum": [
						"FullElectronic",
						"DataImage5Copy",
						"Hybrid",
						"Image"
					]
				},
				"originType": {
					"description": "manifest origin type",
					"type": "string",
					"enum": [
						"Web",
						"Service",
						"Mail"
					]
				},
				"certifiedDate": {
					"description": "Contains the manifest certified date",
					"type": "string",
					"format": "date-time"
				},
				"generatorSiteId":{
					"description": "Contains the the site id of the manifest generator",
					"type": "string"
				}
			},
			"additionalProperties": false
		},
		"Revision": {
			"type": "object",
			"properties": {
				"adjustmentAmount": {
					"description": "Contains either Bill Current or Bill Late fee adjusted absolute amount. ",
					"type": "number"
				},
				"amountType": {
					"description": "Specifies what amount (Current or late fee) was adjusted",
					"type": "string",
					"enum": [
						"Current",
						"LateFee"
					]
				},
				"publicComments": {
					"description": "adjustment comments",
					"type": "string"
				},
				"createdDate": {
					"description": "Contains the adjustment creation date",
					"type": "string",
					"format": "date-time"
				}
			},
			"additionalProperties": false
		}
	}
}